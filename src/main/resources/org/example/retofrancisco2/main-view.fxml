<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="root" prefHeight="400.0" prefWidth="600.0" styleClass="PantallaMain" stylesheets="@../../../style.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.retofrancisco2.controllers.MainController">
   <top>
      <VBox alignment="TOP_CENTER" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="5.0" />
         </BorderPane.margin>
         <children>
            <MenuBar fx:id="menu" prefHeight="25.0" prefWidth="590.0">
              <menus>
                <Menu mnemonicParsing="false" text="Ajustes">
                  <items>
                    <MenuItem fx:id="cerrarSesion" mnemonicParsing="false" onAction="#cerrarSesion" text="Cerrar Sesion" />
                        <MenuItem fx:id="cerrar" mnemonicParsing="false" onAction="#cerrar" text="Cerrar" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <Label alignment="CENTER" contentDisplay="CENTER" text="MIS COPIAS">
               <font>
                  <Font size="27.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" top="10.0" />
               </VBox.margin>
            </Label>
         </children>
      </VBox>
   </top>
   <bottom>
      <FlowPane alignment="CENTER" hgap="50.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnAñadir" mnemonicParsing="false" onAction="#añadirCopia" prefWidth="150.0" text="Añadir Copia">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Button>
            <Button fx:id="btnEliminar" mnemonicParsing="false" onAction="#eliminarCopia" prefWidth="150.0" text="Eliminar Copia">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Button>
            <Button fx:id="btnVerCopia" mnemonicParsing="false" onAction="#verCopia" prefWidth="150.0" text="Ver Copia">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Button>
         </children>
      </FlowPane>
   </bottom>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <left>
      <TableView fx:id="tablaCopias" prefHeight="254.0" prefWidth="375.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="tcTitulo" prefWidth="75.0" text="Titulo" />
          <TableColumn fx:id="tcEstado" prefWidth="75.0" text="Estado" />
            <TableColumn fx:id="tcTipo" prefWidth="75.0" text="Tipo" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
         <BorderPane.margin>
            <Insets bottom="20.0" />
         </BorderPane.margin>
      </TableView>
   </left>
   <right>
      <VBox prefHeight="254.0" prefWidth="192.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Titulo:" />
            <TextField fx:id="tfTitulo" editable="false" />
            <Label text="Estado:" />
            <ComboBox fx:id="cbEstado" prefHeight="25.0" prefWidth="241.0" />
            <Label text="Tipo:" />
            <ComboBox fx:id="cbTipo" prefHeight="25.0" prefWidth="231.0" />
            <Button fx:id="btnEditar" mnemonicParsing="false" onAction="#editarCopia" prefHeight="25.0" prefWidth="217.0" text="Editar copia">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="btnDeshacer" mnemonicParsing="false" onAction="#deshacer" prefHeight="25.0" prefWidth="217.0" text="Deshacer Eliminacion">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </right>
</BorderPane>
