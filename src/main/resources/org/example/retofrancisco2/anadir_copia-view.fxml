<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="600.0" styleClass="AnadirCopiaController" stylesheets="@../../../style.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.retofrancisco2.controllers.AnadirCopiaController">
   <left>
      <TableView fx:id="tabla" prefHeight="331.0" prefWidth="308.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="cbTitulo" prefWidth="72.0" text="Titulo" />
          <TableColumn fx:id="cbGenero" prefWidth="54.0" text="Genero" />
            <TableColumn fx:id="cbAño" prefWidth="52.0" text="Año" />
            <TableColumn fx:id="cbDescripcion" prefWidth="79.0" text="Descripcion" />
            <TableColumn fx:id="cbDirector" prefWidth="58.0" text="Director" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </left>
   <right>
      <VBox prefHeight="400.0" prefWidth="250.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Titulo:" />
            <TextField fx:id="tfTitulo" editable="false">
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </TextField>
            <Label text="Estado:" />
            <ComboBox fx:id="cbEstado" prefHeight="25.0" prefWidth="251.0" promptText="Bueno">
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </ComboBox>
            <Label text="Soporte:" />
            <ComboBox fx:id="cbSoporte" prefHeight="25.0" prefWidth="256.0" promptText="DVD" />
            <FlowPane alignment="TOP_CENTER" hgap="20.0" prefHeight="200.0" prefWidth="200.0">
               <children>
                  <Button fx:id="btnAñadir" mnemonicParsing="false" onAction="#añadirCopia" prefWidth="100.0" text="Añadir Copia" />
                  <Button fx:id="btnCancelar" mnemonicParsing="false" onAction="#cancelar" prefWidth="100.0" text="Cancelar" />
               </children>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </FlowPane>
         </children>
      </VBox>
   </right>
   <top>
      <Label text="Crear Copia" BorderPane.alignment="CENTER">
         <font>
            <Font size="27.0" />
         </font>
         <BorderPane.margin>
            <Insets bottom="10.0" />
         </BorderPane.margin>
      </Label>
   </top>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</BorderPane>
